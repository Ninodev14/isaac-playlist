
<%= render @playlist %>
<div class="container-fluid"> 
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="d-flex justify-content-around" style=" margin-top: -17vh; margin-left: 4vh;">
          <%= link_to "Edit this song", edit_playlist_path(@playlist), class:"btn btn-warning"%>
          <button class="btn btn-primary" style="background-color:rgb(30, 30, 40);"><%= link_to "Back to playlists", playlists_path %></button>
          <%= button_to "Destroy this song" , @playlist, method: :delete, class:"btn btn-danger" %>
      </div>
    </div> 
  <div class="col-3"></div>
</div>
</div>

